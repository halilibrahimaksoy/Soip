<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".ui.profile.UserProfileFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_alignParentTop="true"
            android:background="@color/colorPrimary"
            app:contentInsetRight="10dp"
            app:contentInsetStart="10dp">

            <RelativeLayout
                android:id="@+id/rltvEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/btnCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/ic_cancel" />

                <ImageView
                    android:id="@+id/btnSave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_save" />

                <ImageView
                    android:id="@+id/btnEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/ic_edit" />

                <ImageView
                    android:id="@+id/btnSettings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_settings" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rltvPresent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/ic_back" />

                <ImageView
                    android:id="@+id/btnSend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_send" />
            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_below="@id/toolbar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/image_circle"
            android:padding="@dimen/border_size"
            android:src="@mipmap/ic_photo" />


        <TextView
            android:id="@+id/txt_phone_number"
            android:layout_width="match_parent"
            style="@style/BaseTextStyle"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@color/colorAccent"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/color_text3"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/lnrEdit"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_phone_number"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:animateLayoutChanges="true"
            android:orientation="vertical"
            android:visibility="visible">


            <EditText
                style="@style/BaseEditTextStyle"
                android:id="@+id/txtFullName2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/text_input_bg"
                android:hint="Full Name"
                android:inputType="text"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/color_text1"
                android:textSize="18sp" />


            <EditText
                style="@style/BaseEditTextStyle"
                android:id="@+id/txtInfo2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/text_input_bg"
                android:gravity="top|start"
                android:hint="@string/abouth_me"
                android:inputType="textMultiLine"
                android:maxLength="200"
                android:maxLines="10"
                android:minLines="6"
                android:padding="10dp"
                android:textColor="@color/color_text1" />

            <EditText
                style="@style/BaseEditTextStyle"
                android:id="@+id/txtInstagram2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/text_input_bg"
                android:drawableStart="@mipmap/ic_instagram"
                android:padding="5dp"
                android:singleLine="true"
                android:textColor="@color/color_text1" />

            <EditText
                style="@style/BaseEditTextStyle"
                android:id="@+id/txtFacebook2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/text_input_bg"
                android:drawableStart="@mipmap/ic_facebook"
                android:padding="5dp"
                android:singleLine="true"
                android:textColor="@color/color_text1" />

            <EditText
                style="@style/BaseEditTextStyle"
                android:id="@+id/txtTwitter2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/text_input_bg"
                android:drawableStart="@mipmap/ic_twitter"
                android:padding="5dp"
                android:singleLine="true"
                android:textColor="@color/color_text1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnrShow"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_phone_number"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:animateLayoutChanges="true"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                style="@style/BaseTextStyle"
                android:id="@+id/txtFullName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/color_text1"
                android:textSize="18sp" />

            <TextView
                style="@style/BaseTextStyle"
                android:id="@+id/txtInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="start"
                android:padding="10dp"
                android:textColor="@color/color_text2"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgInstagram"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:src="@mipmap/ic_instagram"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/imgFacebook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:src="@mipmap/ic_facebook"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/imgTwitter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:src="@mipmap/ic_twitter"
                    android:visibility="gone" />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</ScrollView>