<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.discover.MapsFragment">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clickable="true"
        />
    <TextView
        style="@style/BaseTextStyle"
        android:id="@+id/txtConMessage"
        android:layout_width="match_parent"
        android:gravity="center"
        android:visibility="visible"
        android:text="@string/no_connection_message"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <io.ghyeok.stickyswitch.widget.StickySwitch
        android:id="@+id/swcPower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:ss_animationDuration="300"
        app:ss_animationType="line"
        app:ss_iconPadding="10dp"
        app:ss_iconSize="36dp"
        app:ss_leftIcon="@drawable/ic_visibility_filled"
        app:ss_rightIcon="@drawable/ic_visibility_off_outline"
        app:ss_sliderBackgroundColor="@color/power_background"
        app:ss_switchColor="@color/power"
        app:ss_textVisibility="gone" />

    <ImageView
        android:id="@+id/myLocation"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="30dp"
        android:background="@drawable/my_location_button_background"
        android:padding="5dp"
        android:src="@drawable/ic_location"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>