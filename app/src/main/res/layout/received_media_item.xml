<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <ImageView
        android:id="@+id/img_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/image_item_background"
        android:scaleType="centerInside"
        app:layout_constraintHeight_max="@dimen/image_max_height"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_max="@dimen/image_max_width" />

    <ImageView
        android:id="@+id/img_play"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:alpha=".80"
        android:src="@drawable/ic_play_arrow"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/img_msg"
        app:layout_constraintEnd_toEndOf="@id/img_msg"
        app:layout_constraintStart_toStartOf="@id/img_msg"
        app:layout_constraintTop_toTopOf="@id/img_msg" />

    <TextView
        style="@style/BaseTextStyle"
        android:id="@+id/txtDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/message_item_date_margin"
        android:text="15:25"
        android:textColor="@color/conversation_detail_item_right_date"
        android:textSize="@dimen/message_item_date_size"
        app:layout_constraintBottom_toBottomOf="@id/img_msg"
        app:layout_constraintEnd_toEndOf="@id/img_msg" />
</androidx.constraintlayout.widget.ConstraintLayout>